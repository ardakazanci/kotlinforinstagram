<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".login.TelephoneRegisterFragment">


    <TextView
        android:text="ONAY KODUNU GİR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12" android:textColor="@color/siyah" android:textSize="16sp" android:textStyle="bold"
        android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
        android:text=" şu numaraya gönderdiğiniz 6 haneli onay kudunu giriniz."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:textSize="12sp" android:textColor="@color/siyah"/>
    <TextView
        android:text="+90 506 160 93 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_telephone_view" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView18" android:textSize="12sp"
        android:textColor="@color/siyah"/>
    <EditText
        android:background="@drawable/edittext_login_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:padding="14dp"
        android:id="@+id/edittext_telephone_code"
        android:hint="Onay Kodu" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_telephone_view"/>
    <Button
        android:text="İLERİ"
        android:textAllCaps="false"
        android:textColor="@color/colorSonukMavi"
        android:background="@drawable/button_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_telephone_next" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_telephone_code"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>