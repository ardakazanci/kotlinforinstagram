<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileSettingsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back"
        android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
        android:text="Ayarlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:textSize="18sp" android:textColor="@color/siyah"/>

    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@color/colorToolbarBottomLine" android:id="@+id/view_toolbar_profile_settings_line"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
          android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
        android:text="Hesap Ayarları"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10" android:textColor="@color/siyah" android:textStyle="bold" android:textSize="16sp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view_toolbar_profile_settings_line"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
        android:text="Beğendiğin Gönderiler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_accounts_settings_likes_post" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_accounts_settings_profile_edit"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textColor="@color/siyah"/>
    <TextView
        android:text="Profili Düzenle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_accounts_settings_profile_edit" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:textColor="@color/siyah"/>
    <TextView
        android:text="Şifreni Değiştir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_accounts_settings_password_change" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_accounts_settings_likes_post"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textColor="@color/siyah"/>
    <TextView
        android:text="Kaydedilenler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_accounts_settings_saved_post" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_accounts_settings_password_change"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textColor="@color/siyah"/>
    <TextView
        android:text="Gizli Hesap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_accounts_settings_account_hidden" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_accounts_settings_saved_post"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textColor="@color/siyah"/>
    <TextView
        android:text="Arama Geçmişini Sil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView17" android:textColor="#03A9F4" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_accounts_settings_account_hidden"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:text="Çıkış Yap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView18" android:textColor="#03A9F4" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>


    <View android:layout_width="0dp"
          android:layout_height="2dp"
          android:background="@color/colorToolbarBottomLine"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@+id/bottomnavigationview_profile_settings"/>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx android:layout_width="match_parent"
                                                                android:layout_height="50dp"
                                                                app:menu="@menu/menu_bottom_navigation"
                                                                app:layout_constraintBottom_toBottomOf="parent"
                                                                app:layout_constraintStart_toStartOf="parent"
                                                                app:layout_constraintEnd_toEndOf="parent"
                                                                android:id="@+id/bottomnavigationview_profile_settings">


    </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>

</androidx.constraintlayout.widget.ConstraintLayout>