<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
        android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
        android:background="@drawable/edittext_login_line"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edittext_login_email_info" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/siyah" android:hint="E-Posta yada Kullanıcı Adı"/>
    <EditText
        android:background="@drawable/edittext_login_line"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edittext_login_password_info" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_login_email_info" android:hint="Parola"
        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" android:textColor="@color/siyah"/>
    <Button
        android:textAllCaps="false"
        android:enabled="false"
        android:textColor="@color/mavi"
        android:text="Giriş"
        android:background="@drawable/button_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_login" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_login_password_info"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>

    <View android:layout_width="0dp" android:layout_height="2dp"
          android:id="@+id/alt_kisim_view" android:background="@color/golgelik"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="50dp"/>
    <TextView
        android:text="Hesabın yok mu ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/alt_kisim_view" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.451"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="128dp"/>
    <TextView
        android:text="Kaydol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_register" android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alt_kisim_view"
        app:layout_constraintVertical_bias="0.451" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>