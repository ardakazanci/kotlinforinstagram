<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".profile.PictureUploadProgressDFragment">


    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:indeterminate="true"/>
    <TextView
        android:text="Yükleniyor..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/progressBar2" android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar2"
        app:layout_constraintTop_toTopOf="@+id/progressBar2" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>